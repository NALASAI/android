<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="#00B8FF"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <TextView
            android:paddingRight="10dp"
            android:layout_gravity="center"
            android:gravity="right"
            android:text="0"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </LinearLayout>

    <LinearLayout
        android:background="#00FFFF"
        android:layout_width="match_parent"
        android:layout_height="215dp">

        <TextView
            android:id="@+id/number_one"
            android:text="@string/number_one"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="#FF4545"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/two"
            android:text="@string/number_two"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="#FF4545"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/three"
            android:text="@string/number_three"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="#FF4545"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:text="CA"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="#20FF37"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <LinearLayout
        android:background="#00FFFF"
        android:layout_width="match_parent"
        android:layout_height="215dp">

        <TextView
            android:id="@+id/number_four"
            android:text="@string/number_four"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="#FF4545"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/number_five"
            android:text="@string/number_five"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="#FF4545"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/number_six"
            android:text="@string/number_six"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="#FF4545"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/plus"
            android:text="+"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="#FFE600"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:background="#00FFFF"
        android:layout_width="match_parent"
        android:layout_height="215dp">

        <TextView
            android:id="@+id/number_seven"
            android:text="@string/number_seven"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="#FF4545"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/number_eight"
            android:text="@string/number_eight"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="#FF4545"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/number_nine"
            android:text="@string/number_nine"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="#FF4545"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/number_zero"
            android:text="@string/number_zero"
            android:textSize="35dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="#FF4545"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>